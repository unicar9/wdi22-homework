<h2>Edit Animal</h2>
<form action="/animals/<%= @animal["id"] %>" method="post">
  <p>
    <label for="">Species/Name:</label>
    <input type="text" name="species" value="<%= @animal["species"] %>">
  </p>
  <p>
    <label for="">Image URL:</label>
    <input type="text" name="image" value="<%= @animal["image"] %>">
  </p>
  <p>
    <label for="">Description:</label>
    <input type="text" name="description" value="<%= @animal["description"] %>">
  </p>
  <p>
    <label for="">Leg Count:</label>
    <input type="text" name="legs" value="<%= @animal["legs"] %>">
  </p>
  <input type="submit" name="" value="Update Animal">
</form>
